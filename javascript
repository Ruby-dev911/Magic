let userChoice = "";

let computerAnswer = Math.floor(Math.random());

if (computerAnswer === 1) {
    console.log('I can\'t see clearly');
} else if (computerAnswer === 2) {
    console.log('I think it is possible');
} else if (computerAnswer === 3) {
    console.log('No, No, No, NO!');
} else if (computerAnswer === 4) {
    console.log('I see it in the future');
} else if (computerAnswer === 5) {
    console.log('No!');
} else if (computerAnswer === 6) {
    console.log('How dare you ask me that!?');
} else if (computerAnswer === 7) {
    console.log('The ancient one wills it so..');
} else if (computerAnswer === 8) {
    console.log('You will be happy. You have no choice.');
}